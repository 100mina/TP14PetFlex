<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity"
    android:background="@drawable/bg">
    
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_back"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/bg1"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:background="@drawable/bg_btn"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:fontFamily="@font/cafedongdong"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/bg1"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:gravity="center"
        android:textSize="24sp"
        android:fontFamily="@font/cafedongdong"
        android:layout_below="@id/bg2"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="65dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/login_input_layout_id"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_id"
        android:layout_below="@id/bg2"
        android:layout_marginTop="45dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/cafedongdong"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="15"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_pw"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:gravity="center"
        android:textSize="24sp"
        android:fontFamily="@font/cafedongdong"
        android:layout_below="@id/tv_id"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="40dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/login_input_layout_pw"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_id"
        android:layout_below="@id/tv_id"
        android:layout_marginTop="20dp"
        app:endIconMode="password_toggle">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/cafedongdong"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="20"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn_login"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="로그인"
        android:textSize="25sp"
        android:fontFamily="@font/cafedongdong"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:background="@drawable/bg_btn"
        android:layout_below="@id/tv_pw"
        android:layout_marginTop="60dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn_go_join"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="회원가입"
        android:textSize="25sp"
        android:layout_marginLeft="70dp"
        android:fontFamily="@font/cafedongdong"
        android:background="@drawable/bg_btn"
        android:layout_below="@id/tv_pw"
        android:layout_marginTop="60dp"/>



</RelativeLayout>