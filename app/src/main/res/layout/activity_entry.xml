<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EntryActivity"
    android:background="@drawable/bg_pattern">

    <ImageView
        android:id="@+id/entry_iv"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:src="@drawable/app_logo2"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/entry_btn_login"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="로그인"
        android:background="@drawable/bg_btn"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="@font/cafedongdong"
        android:gravity="center"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/entry_btn_join"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="회원가입"
        android:background="@drawable/bg_btn"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/cafedongdong"
        android:gravity="center"
        android:layout_below="@id/entry_btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/entry_btn_no_member"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:text="비회원으로 구경할래요"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="@font/cafedongdong"
        android:background="@drawable/bg_btn"
        android:layout_below="@id/entry_btn_join"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

</RelativeLayout>