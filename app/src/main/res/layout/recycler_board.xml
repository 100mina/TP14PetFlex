<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:backgroundTint="#FFFAF1"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/board_iv"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@color/mainColor"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/board_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="26sp"
            android:fontFamily="@font/cafedongdong"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/board_iv"/>

        <TextView
            android:id="@+id/board_tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나이"
            android:textSize="16sp"
            android:fontFamily="@font/cafedongdong"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/board_tv_name"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/board_btn_fav"
            android:layout_width="30dp"
            android:layout_height="30sp"
            android:background="@drawable/ic_favorite_border"
            android:layout_toLeftOf="@id/board_tv_count"
            android:layout_alignTop="@id/board_tv_age"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/board_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:layout_marginLeft="5dp"
            android:textSize="24sp"
            android:fontFamily="@font/cafedongdong"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/board_tv_age"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>