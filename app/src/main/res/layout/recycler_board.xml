<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#FFFAF1"
    app:cardCornerRadius="2dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="15dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/board_iv"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@color/mainColor"/>

        <TextView
            android:id="@+id/board_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="22sp"
            android:fontFamily="@font/cafedongdong"
            android:layout_marginLeft="13dp"
            android:layout_marginBottom="3dp"
            android:layout_below="@id/board_iv"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/board_btn_fav"
            android:layout_width="30dp"
            android:layout_height="30sp"
            android:background="@drawable/ic_favorite_border"
            android:layout_toLeftOf="@id/board_tv_count"
            android:layout_below="@id/board_tv_name"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/board_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:layout_marginLeft="5dp"
            android:textSize="24sp"
            android:fontFamily="@font/cafedongdong"
            android:layout_alignParentRight="true"
            android:layout_below="@id/board_tv_name"
            android:layout_marginRight="13dp"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>