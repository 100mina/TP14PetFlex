<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="2dp"
    android:backgroundTint="#FFFAF1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/place_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상호명 어쩌구저쩌구"
            android:textStyle="bold"
            android:textSize="24sp"
            android:fontFamily="@font/cafedongdong"/>

        <TextView
            android:id="@+id/place_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소 서울시 강동구 어쩌구 저쩌구"
            android:fontFamily="@font/cafedongdong"
            android:layout_below="@id/place_tv_name"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/place_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02-000-0000"
            android:layout_below="@id/place_tv_address"
            android:fontFamily="@font/cafedongdong"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/place_tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거리m"
            android:fontFamily="@font/cafedongdong"
            android:textColor="#656565"
            android:layout_alignParentRight="true"
            android:textSize="16sp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>