<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    app:cardCornerRadius="4dp"
    android:backgroundTint="#FFFBF2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bg1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_tiara2"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:id="@+id/bg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/bg1">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_wing_left"
                android:layout_marginTop="30dp"/>

            <ImageView
                android:id="@+id/home_iv1"
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:src="@color/mainColor"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_wing_right"
                android:layout_marginTop="30dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/home_tv1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cafedongdong"
            android:text="1등 이름"
            android:layout_below="@id/bg2"
            android:textSize="28sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/home_tv1_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cafedongdong"
            android:text="좋아요"
            android:layout_below="@id/home_tv1_name"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>